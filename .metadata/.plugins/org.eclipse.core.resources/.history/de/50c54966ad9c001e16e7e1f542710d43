/* Agrega estilo a la tarjeta (card) */
.card {
    border: 1px solid rgba(0, 0, 0, 0.125);
    border-radius: 0.25rem;
    background-color: rgba(255, 255, 255, 0.7); /* Opacidad del fondo */
    box-shadow: 0 0.25rem 0.75rem rgba(0, 0, 0, 0.1);
}

.card {
    opacity: 0;
    animation: slideUp 1s ease-in-out forwards; /* Agrega "forwards" para que el estado final se mantenga */
}

@keyframes slideUp {
    to {
        opacity: 0.8;
        transform: translateY(0);
    }
}


/* Agrega estilo al título de la tarjeta */
.card-header {
    background-color: rgb(0, 0, 0); /* Color de fondo del encabezado */
    color: #fff; /* Color del texto del encabezado */
}

/* Agrega estilo al cuerpo de la tarjeta */
.card-body {
    background-color: rgba(255, 255, 255, 0.7); /* Opacidad del fondo */
}

/* Agrega estilo al botón Guardar */
.btn-primary {
    background-color: #007bff; /* Color de fondo del botón */
    border-color: #007bff; /* Color del borde del botón */
}

.btn-primary:hover {
    background-color: #0056b3; /* Color de fondo del botón al pasar el mouse */
    border-color: #0056b3; /* Color del borde del botón al pasar el mouse */
}

/* Agrega estilo al botón Cancelar */
.btn-secondary {
    background-color: #6c757d; /* Color de fondo del botón */
    border-color: #6c757d; /* Color del borde del botón */
}

.btn-secondary:hover {
    background-color: #545b62; /* Color de fondo del botón al pasar el mouse */
    border-color: #545b62; /* Color del borde del botón al pasar el mouse */
}

/* Agrega estilo a las opciones del select múltiple */
.custom-select {
    background-color: rgba(255, 255, 255, 0.7); /* Opacidad del fondo */
}

/* Agrega estilo a los mensajes de error */
.alert-danger {
    background-color: #f8d7da; /* Color de fondo del mensaje de error */
    border: 1px solid #f5c6cb; /* Color del borde del mensaje de error */
    color: #721c24; /* Color del texto del mensaje de error */
}
